<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Navigator.Component"
        android:id="@+id/tags_view"
        android:orientation="vertical"
        android:gravity="top">
    <ListView
            style="@style/Navigator.Component"
            android:id="@+id/tv_list_view"
            android:orientation="vertical">
    </ListView>
    <LinearLayout
            android:id="@+id/tv_list_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/middle_item_height"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
        <Button
                android:id="@+id/tv_load_from_sdcard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?borderlessButtonStyle"
                android:text="@string/load_from_sdcard"
                android:textSize="@dimen/small_font_size"
                android:onClick="onLoadTagButtonClick"/>
        <Button
                android:id="@+id/tv_load_from_net"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?borderlessButtonStyle"
                android:text="@string/load_from_net"
                android:textSize="@dimen/small_font_size"
                android:onClick="onLoadTagButtonClick"/>
    </LinearLayout>

</RelativeLayout>
