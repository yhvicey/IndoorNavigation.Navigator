<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Navigator.Component.List.Item"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/fli_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/fli_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/large_spacing"
            android:paddingEnd="@dimen/large_spacing"
            android:gravity="start|center"
            android:textSize="@dimen/middle_font_size"/>

</LinearLayout>