<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map_renderer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/mr_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_spacing"
            android:layout_marginEnd="@dimen/large_spacing"
            android:layout_marginTop="@dimen/large_spacing"
            android:background="@drawable/shape_round_rect">

        <SearchView
                android:id="@+id/mr_search_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/middle_item_height"
                android:layout_alignParentEnd="true"
                android:imeOptions="actionSearch"
                android:queryHint="@string/input_target_name"
                android:background="@drawable/shape_round_rect"/>

        <ListView
                android:id="@+id/mr_search_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mr_search_view"/>

    </RelativeLayout>

</RelativeLayout>
