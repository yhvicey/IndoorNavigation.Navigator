<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:onClick="onClick">

    <cn.vicey.navigator.Components.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:icon="@drawable/ic_menu"
            app:title="@string/menu_title"/>

    <cn.vicey.navigator.Components.MenuItem
            android:id="@+id/menu_navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMenuItemClick"
            app:highlighted="true"
            app:icon="@drawable/ic_menu_navigate"
            app:text="@string/navigate"/>

    <cn.vicey.navigator.Components.MenuItem
            android:id="@+id/menu_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMenuItemClick"
            app:icon="@drawable/ic_menu_maps"
            app:text="@string/maps"/>

    <cn.vicey.navigator.Components.MenuItem
            android:id="@+id/menu_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMenuItemClick"
            app:icon="@drawable/ic_menu_tags"
            app:text="@string/tags"/>

    <cn.vicey.navigator.Components.MenuItem
            android:id="@+id/menu_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMenuItemClick"
            app:icon="@drawable/ic_menu_settings"
            app:text="@string/settings"/>

</LinearLayout>